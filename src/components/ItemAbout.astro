---
import CheckCircleIcon from "@/icons/CheckCircleIcon.astro";

const { title, description, position } = Astro.props;
---

<article
  class={`relative flex flex-col ${position == "left" ? "pr-14 text-right" : "pl-14 text-left"}`}
>
  <CheckCircleIcon
    class={`absolute top-0 ${position == "left" ? "right-0" : "left-0"} w-7 h-7 text-tertiary`}
  />
  <h3 class="text-balance font-medium text-base">{title}</h3>
  <p class="text-pretty font-extralight text-base mt-4">{description}</p>
</article>
